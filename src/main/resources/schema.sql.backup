-- CLIENT APPS TABLE:

CREATE TABLE nhs.client_apps (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(50) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    status INT NOT NULL
);
